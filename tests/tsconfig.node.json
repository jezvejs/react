{
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "../node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "strict": true,
        "noEmit": true,
        "paths": {
            "pages/*": [
                "./pages/*"
            ],
            "scenarios/*": [
                "./scenarios/*"
            ],
            "utils/*": [
                "./utils/*"
            ]
        }
    },
    "include": [
        "./**/*.ts"
    ]
}