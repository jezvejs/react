{
    "compilerOptions": {
        "tsBuildInfoFile": "../node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "types": ["node"],
        "skipLibCheck": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "strict": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "pages/*": [
                "./pages/*"
            ],
            "scenarios/*": [
                "./scenarios/*"
            ],
            "shared/*": [
                "shared/*"
            ]
        }
    },
    "include": [
        "pages/**/*.ts",
        "scenarios/**/*.ts",
        "shared/**/*.ts"
    ]
}